{
  "name": "topssh",
  "version": "0.0.0",
  "private": true,
  "watch": {
    "lint:client": {
      "patterns": [
        "client"
      ],
      "extensions": "ts, tsx, js",
      "ignore": [
        "client/public"
      ],
      "verbose": true
    },
    "lint:server": {
      "patterns": [
        "server"
      ],
      "extensions": "ts",
      "verbose": true
    }
  },
  "scripts": {
    "start": "node ./build/server/src/index.js",
    "build:server": "npm run lint:server && tsc --project ./server",
    "build:client": "npm run lint:client && webpack --progress --config ./client/webpack/webpack.production.ts",
    "build": "npm run build:server && npm run build:client",
    "lint:client": "eslint './client/**/*'",
    "lint:server": "eslint './server/src/**/*'",
    "lint": "npm run lint:client && npm run lint:server",
    "watch:lint:client": "npm-watch lint:client",
    "watch:lint:server": "npm-watch lint:server",
    "watch:webpack": "webpack --watch --config ./client/webpack/webpack.dev.ts",
    "watch": "concurrently \"npm-watch\" \"npm run watch:webpack\"",
    "start:dev": "npm run build:dev:client && ts-node ./server/src/index.ts",
    "build:dev:server": "npm run lint:server && tsc --project ./server",
    "build:dev:client": "npm run lint:client && webpack --progress --config ./client/webpack/webpack.dev.ts",
    "build:dev": "npm run build:dev:server && npm run build:dev:client",
    "test:client": "jest --config client/jest.config.ts"
  },
  "dependencies": {
    "@types/react": "^17.0.31",
    "@types/react-dom": "^17.0.10",
    "config": "^3.3.6",
    "cookie-parser": "~1.4.4",
    "express": "~4.16.1",
    "morgan": "~1.9.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "web-vitals": "^2.1.2"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/config": "^0.0.39",
    "@types/cookie-parser": "^1.4.2",
    "@types/copy-webpack-plugin": "^8.0.1",
    "@types/css-minimizer-webpack-plugin": "^3.0.2",
    "@types/debug": "^4.1.7",
    "@types/express": "^4.17.13",
    "@types/mini-css-extract-plugin": "^2.4.0",
    "@types/morgan": "^1.9.3",
    "@types/node": "^16.11.4",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/eslint-plugin-tslint": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "clean-webpack-plugin": "^4.0.0",
    "concurrently": "^6.3.0",
    "css-loader": "^6.4.0",
    "css-minimizer-webpack-plugin": "^3.1.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.26.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "html-beautifier-webpack-plugin": "^1.0.6",
    "html-webpack-plugin": "^5.4.0",
    "identity-obj-proxy": "^3.0.0",
    "mini-css-extract-plugin": "^2.4.3",
    "nodemon": "^2.0.14",
    "npm-watch": "^0.11.0",
    "prettier": "^2.4.1",
    "source-map-loader": "^3.0.0",
    "svg-url-loader": "^7.1.1",
    "terser-webpack-plugin": "^5.2.4",
    "ts-jest": "^27.0.7",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4",
    "webpack": "^5.59.1",
    "webpack-cli": "^4.9.1",
    "webpack-merge": "^5.8.0"
  }
}
